<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/biaotoucolor"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <Button
            android:id="@+id/activity_title_back"
            style="@style/activity_sidename_styles"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawableLeft="@drawable/docter"
            android:drawablePadding="5dp"
            android:paddingRight="15dp"
            android:paddingLeft="2dp"
            android:text="@string/side_name"
            android:layout_marginLeft="10dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/activity_title_name"
            style="@style/activity_titlename_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/login"
            android:visibility="gone" />

        <Button
            android:id="@+id/activity_title_bt2"
            android:layout_width="67dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="@drawable/selector_red_bt"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/set"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="visible" />
    </RelativeLayout>
</LinearLayout>