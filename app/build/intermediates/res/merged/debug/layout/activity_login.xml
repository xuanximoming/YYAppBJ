<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/biaotoucolor"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/usericon" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/login_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/loginheight"
                android:background="@drawable/namebt"
                android:hint="用户名"
                android:singleLine="true"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:textSize="15sp" >
            </EditText>

            <EditText
                android:id="@+id/login_pazz"
                 android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/loginheight"
                android:layout_marginTop="20dp"
                android:background="@drawable/pazzbt"
                android:hint="密码"
                android:inputType="textPassword"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:textSize="15sp" >
            </EditText>
            <CheckBox
                android:id="@+id/isRememberPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="记住密码"
                android:textColor="@android:color/white"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input"
            android:layout_margin="15dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/set_bt"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/loginheight"
                android:layout_weight="1"
                android:background="@drawable/selector_setbt"
                android:text="设置"
                android:textSize="15dp"
                android:textColor="@color/blue"
                android:padding="8dp" />

            <Button
                android:id="@+id/login_bt"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/loginheight"
                android:layout_marginLeft="15dp"
                android:layout_weight="2"
                android:background="@drawable/selector_logbt"
                android:text="登录"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:padding="8dp" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>