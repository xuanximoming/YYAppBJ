<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation="vertical">
    <!--Start Top for dept,bed,Patient_ID,Visit_ID-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/patienttitlemsg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/patient_dept"
            style="@style/item_patientdescdept"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:text="病区" />

        <TextView
            style="@style/item_patientdescdept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text=" " />

        <TextView
            android:id="@+id/patient_bed"
            style="@style/item_patientdescbed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:text="号" />

        <TextView
            style="@style/item_patientdescbed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text=" 床" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                style="@style/patientdescID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="病人ID:" />

            <TextView
                android:id="@+id/patient_ID"
                style="@style/patientdescID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="000000" />

            <TextView
                style="@style/patientdescID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="住院次数:" />

            <TextView
                android:id="@+id/Visit_ID"
                style="@style/patientdescID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />
        </LinearLayout>
    </LinearLayout>
    <!--End Top for dept,bed,Patient_ID,Visit_ID-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:paddingLeft="0dp">

        <LinearLayout
            android:id="@+id/ll_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="horizontal">

                <TextView
                    style="@style/item_sidemsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名:" />

                <TextView
                    android:id="@+id/patient_name"
                    style="@style/item_sidemsgs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="诸葛孔明" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:orientation="horizontal">

                <TextView
                    style="@style/item_sidemsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="性别:" />

                <TextView
                    android:id="@+id/patient_gender"
                    style="@style/item_sidemsgs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="男" />

                <TextView
                    style="@style/item_sidemsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="年龄:" />

                <TextView
                    android:id="@+id/patient_age"
                    style="@style/item_sidemsgs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="99" />

                <TextView
                    style="@style/item_sidemsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="护理等级:" />

                <TextView
                    android:id="@+id/patient_hldj"
                    style="@style/item_sidemsgs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="二级护理" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_101"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_01"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_ks"
                android:layout_width="wrap_content"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/item_sidemsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主管医生:" />

                <TextView
                    android:id="@+id/zhuyi_tv"
                    style="@style/item_sidemsgs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="司马仲达" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/item_sidemsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="入院时间:" />

                <TextView
                    android:id="@+id/side_time"
                    style="@style/item_sidemsgs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="xxxx-xx-xx" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_feibie"
                android:layout_width="wrap_content"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/item_sidemsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="费别:" />

                <TextView
                    android:id="@+id/side_feibie"
                    style="@style/item_sidemsgs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="居民医保" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_102"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_101"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_zhenduan"
                android:layout_width="wrap_content"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/item_sidemsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="诊断:" />

                <TextView
                    android:id="@+id/side_zhenduan"
                    style="@style/item_sidemsgs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂无诊断数据" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_zhuyuanhao"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/item_sidemsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="余额:" />

                <TextView
                    android:id="@+id/side_yue"
                    style="@style/item_sidemsgs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10000.00" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>