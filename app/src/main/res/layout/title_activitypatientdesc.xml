<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/biaotoucolor"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/activity_title_name"
            style="@style/activity_titlename_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/login"
            android:visibility="gone" />

        <Button
            android:id="@+id/activity_title_next"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_red_bt"
            android:gravity="center"
            android:text="下一床"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/activity_title_last"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/activity_title_next"
            android:background="@drawable/selector_red_bt"
            android:gravity="center"
            android:text="上一床"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/activity_title_back"
            style="@style/activity_patientdescname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:drawableLeft="@drawable/back"
            android:paddingLeft="2dp"
            android:paddingRight="10dp"
            android:text="" />
    </RelativeLayout>

</LinearLayout>